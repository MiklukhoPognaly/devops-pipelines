    description('Pipeline for build, test and deploy vacation_planner middleware part')

  	triggers {

       	githubPush()
    }

  	definition {
        cpsScm {

                  lightweight(true)

          		  scm {
                  		github('ugamon/devops-pipelines', 'master')
                  }

          		  scriptPath('Main')
               }
    }
}